<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_list_lost"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/edittext_list_name"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="@color/bback"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/edittext_list_detail"
        app:layout_constraintStart_toEndOf="@+id/image_list_lost" />

    <TextView
        android:id="@+id/edittext_list_detail"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="left|center_vertical"
        android:text="TextView"
        android:textColor="@color/browser_actions_title_color"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_list_lost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/image_list_lost"
        app:layout_constraintTop_toTopOf="@+id/image_list_lost" />

    <TextView
        android:id="@+id/edittext_list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/edittext_list_detail"
        app:layout_constraintTop_toBottomOf="@+id/edittext_list_detail" />

    <ImageView
        android:id="@+id/imgView_list_gender"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/edittext_list_detail"
        app:layout_constraintEnd_toEndOf="@+id/edittext_list_detail"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/imgView_list_age"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/imgView_list_gender"
        app:layout_constraintTop_toTopOf="@+id/imgView_list_gender"
        app:srcCompat="@drawable/icons8adult" />

    <ImageView
        android:id="@+id/imgView_list_status"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/imgView_list_age"
        app:layout_constraintEnd_toStartOf="@+id/imgView_list_age"
        app:layout_constraintTop_toTopOf="@+id/imgView_list_age" />

    <TextView
        android:id="@+id/edittext_list_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textSize="14sp"
        android:textColor="@color/black_de"
        app:layout_constraintStart_toStartOf="@+id/edittext_list_detail"
        app:layout_constraintTop_toBottomOf="@+id/edittext_list_detail" />

    <TextView
        android:id="@+id/text_sim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textColor="@color/red"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/edittext_list_name"
        app:layout_constraintStart_toEndOf="@+id/edittext_list_name"
        app:layout_constraintTop_toTopOf="@+id/edittext_list_name" />

</androidx.constraintlayout.widget.ConstraintLayout>